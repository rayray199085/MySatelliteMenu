<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sat="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.project.stephencao.mysatellitemenu.view.SatelliteMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sat:position="bottom_right"
            android:id="@+id/id_menu"
            sat:radius="150dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@drawable/composer_button"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/id_button"
                       android:layout_centerInParent="true"
                       android:src="@drawable/composer_icn_plus"
                       android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/composer_camera"
                   android:tag="Camera"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/composer_music"
                   android:tag="Music"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/composer_place"
                   android:tag="Place"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/composer_sleep"
                   android:tag="Sleep"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/composer_thought"
                   android:tag="Thought"
                   android:layout_height="wrap_content"/>
    </com.project.stephencao.mysatellitemenu.view.SatelliteMenu>
</RelativeLayout>