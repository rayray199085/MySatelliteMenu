<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--1. 写好属性的参数-->
    <attr name="position">
        <enum name="top_left" value="0"/>
        <enum name="bottom_left" value="1"/>
        <enum name="top_right" value="2"/>
        <enum name="bottom_right" value="3"/>
    </attr>
    <attr name="radius" format="dimension"/>
    <!--2. 添加到自定义的控件中-->
    <declare-styleable name="SatelliteMenu">
        <attr name="position"/>
        <attr name="radius"/>
    </declare-styleable>
</resources>